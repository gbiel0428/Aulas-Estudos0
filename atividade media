import os 
os.system

nome = input("Digite seu nome: ")
n1 =float(input("Digite a 1 nota do aluno: "))
n2 =float(input("Digite a 2 nota do aluno: "))

soma = n1+ n2
media = soma / 2
print(f"A media do aluno Ã©: {media}")

if media > 4:
    conceito = "E"
elif  media < 6:
    conceito = "D"
elif media < 7.5:
    conceito = "C"
elif media < 9:
    conceito = "B"
elif media <= 10:
    conceito = "A"
else:
    conceito = "Valor invalidor"

if media <6:
    print(f"{nome},voce foi reprovador,seu conceito foi {conceito}")
else:
    print(f"{nome},voce foi aprovado,seu conceito foi {conceito}")
